{
    "file_format_version": "1.0.0",
    "layer": {
        "name": "VK_LAYER_DEBUG_TRACE_layer",
        "type": "GLOBAL",
        "library_path": "libvulkan_debugtrace.so",
        "api_version": "1.0.0",
        "implementation_version": "1",
        "description": "Vulkan Debug Trace Layer - A minimal validation layer for debugging purposes",
        "functions": {
            "vkGetInstanceProcAddr": "GetInstanceProcAddr",
            "vkGetDeviceProcAddr": "GetDeviceProcAddr"
        },
        "enable_environment": {
            "VK_LOADER_DEBUG": "all"
        },
        "disable_environment": {
            "DISABLE_VK_DEBUG_TRACE_LAYER": "1"
        },
        "instance_extensions": [
            {
                "name": "VK_EXT_debug_utils",
                "spec_version": "1"
            }
        ],
        "device_extensions": [
            {
                "name": "VK_EXT_debug_marker",
                "spec_version": "1"
            }
        ]
    }
}